<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pincode.PinCodeActivity">

    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/passcodeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#222222"
        app:correctStateColor="@color/green"
        app:normalStateColor="@color/white"
        app:numberTextColor="@color/black"
        app:passcodeLength="4"
        app:passcodeViewType="set_passcode"
        app:wrongStateColor="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>